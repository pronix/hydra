<%= head_page "macros" %>
<%= link_to I18n.t("create_macro"), new_macro_path , :class=>"gray_button macros js_link" %>
<table class="brown macros">
  <tr>
    <th><%= I18n.t("name") %></th>
    <th><%= I18n.t("created") %></th>
    <th><%= I18n.t("actions") %></th>
  </tr>
  <% @macros.each do |macro| -%>
  <tr>
    <td><%= macro.name %></td>
    <td><%= macro.created_at.strftime("%d.%m.%Y %H:%M") %></td>
    <td>
      <%= link_to I18n.t("edit"), edit_macro_path(macro), :class => "edit js_link" %>
      <%= link_to "", macro_path(macro),
          :method => :delete, :confirm => I18n.t("delete_macros"), :class => "delete" %>

    </td>
  </tr>
  <% end -%>
</table>
