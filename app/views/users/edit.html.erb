<% semantic_form_for @user, :url => user_path, :html => { :method => :put, :class => 'base_form' }  do |form| %>
<% form.inputs :class => "base_form"  do -%>
<%= form.input :name %>
<%= form.input :email %>
<%= form.input :notification_email %>
<%= form.input :password %>
<%= form.input :password_confirmation %>
<%= form.input :admin, :as => :boolean %>
<% end -%>
<% form.buttons do -%>
<%= form.commit_button I18n.t('save'),  :class => "base_buttons" %>
<% end -%>
<% end -%>
