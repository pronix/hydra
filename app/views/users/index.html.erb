<%= head_page %>
<%= link_to I18n.t("add_user"), new_user_path, :class => "gray_button users" %>
<table class="brown">
  <tr>
    <th><%= I18n.t("login") %></th>
    <th><%= I18n.t("added_date") %></th>
    <th><%= I18n.t("tasks") %></th>
    <th><%= I18n.t("actions") %></th>    
  </tr>
  <% @users.each do |user| -%>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.created_at.strftime("%d.%m.%Y %H:%M") %></td>
    <td><%= user.active_tasks.to_i %>/<%= user.completed_tasks.to_i %></td>
    <td>
      <%= link_to "", edit_user_path(user), :class => "user" %>
      <%= link_to "", user_path(user), :method => :delete, :confirm => I18n.t("Delete user"), :class => "delete" %>
    </td>
  </tr>
  <% end -%>
</table>
