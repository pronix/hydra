<table class="brown <%= params[:controller] -%>">
  <tr>
		<th><%= I18n.t("category") %></th>
		<th><%= I18n.t("name") %></th>
		<th><%= I18n.t("status") %></th>
    <% if params[:controller]["tasks"] -%>
      <th><%= I18n.t("actions") %></th>
    <% end -%>
  </tr>
  <% tasks.each do |task| -%>
  <tr>
    <td><%= h task.category.name  %></td>
    <td><%= link_to h(task.name), task_path(task)  %></td>
    <td class="state_task_<%= task.state %>"><%= I18n.t task.state.to_s %>
      <% if task.downloading? -%>
        <span class='downloading_monitor'>
          [ <%= number_to_percentage(task.percentage.to_i, :precision => 0) -%> | <%= task.speed -%>kb/sec ]
        </span>
      <% end -%>
    </td>
    <% if params[:controller]["tasks"] -%>
    <td>
      <%= link_to I18n.t("delete"),  task_path(task), :method => :delete,
      :confirm => I18n.t("delete_task"), :title => I18n.t("delete")  %>
    </td>
    <% end -%>
  </tr>
  <% end -%>
</table>
